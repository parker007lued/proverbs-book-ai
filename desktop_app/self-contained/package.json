{
  "name": "proverbs-book-ai-standalone",
  "version": "1.0.0",
  "description": "Self-contained Proverbs Book AI with all dependencies",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.proverbsbook.ai",
    "productName": "Proverbs Book AI",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "database",
        "to": "database"
      },
      {
        "from": "scripts",
        "to": "scripts"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.2",
    "chromadb": "^1.8.1",
    "electron-updater": "^6.1.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
